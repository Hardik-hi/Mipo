<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/sessionParamsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Edit Budget"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:textSize="32sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/sessionParamsBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ems="7"
        android:layout_marginTop="15dp"
        android:layout_below="@id/sessionParamsTitle"
        android:hint="enter budget"
        android:inputType="numberDecimal"
        android:textSize="18sp"
         />

    <EditText
        android:id="@+id/sessionParamsStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sessionParamsBudget"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:ems="7"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:hint="start date"
        android:inputType="date" />

    <EditText
        android:id="@+id/sessionParamsEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sessionParamsStartDate"
        android:layout_marginStart="10dp"
        android:ems="7"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:layout_marginTop="15dp"
        android:hint="end date"
        android:inputType="date"
         />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/sessionParamsEndDate"
        android:backgroundTint="#94096C0B"
        android:text="Save"
         />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:layout_marginTop="13dp"
        android:text="Cancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"

        android:background="@android:color/transparent"
        android:textColor="#ED1111"
        android:layout_below="@id/sessionParamsEndDate"
         />

</RelativeLayout>